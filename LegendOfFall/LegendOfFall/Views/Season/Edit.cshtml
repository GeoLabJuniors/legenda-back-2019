
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model LegendOfFall.Models.Season

<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<h1>სეზონის რედაქტირება</h1>

@using (Html.BeginForm("Edit", "Season", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input  style="display:none" value="@Model.Id"/>
    <div>
        @Html.LabelFor(x => x.Title)@Html.EditorFor(x => x.Title)
    </div>
    <div>
        @Html.LabelFor(x => x.Description)@Html.TextAreaFor(x => x.Description, new { @class = "ckeditor", value = Model.Description})
    </div>
    <div>
        @Html.LabelFor(x => x.Year)@Html.EditorFor(x => x.Year)
    </div>    
    <input type="submit" value="შენახვა" />
}

<script>
    var elem = document.getElementsByClassName("ckeditor");
    
</script>

