
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model LegendOfFall.ViewModels.JudgeCreationViewModel

@using (Html.BeginForm("Create","Judge", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Email)
        @Html.TextBoxFor(x=>x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Bio)
        @Html.TextAreaFor(x=>x.Bio, new { @class="ckeditor"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Upload)
        <input class="form-control" type="file" name="Upload" id="Upload" />
    </div>

    
    <div class="form-group">

        @Html.Label("სეზონები ჟიურის წევრად")

        <div>
            @for (int i = 0; i < Model.JudgedSeasonList.Count; i++)
            {
                <span>@Model.JudgedSeasonList[i].season.Year</span>@Html.CheckBoxFor(x => x.JudgedSeasonList[i].IsChecked)   
                @Html.HiddenFor(x=>x.JudgedSeasonList[i].SeasonId)
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">შენახვა</button>
}


